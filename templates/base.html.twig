<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome to SymfonyPost CRUD App!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}
        <div class="sidebar">
            {% block sidebar %}
                <ul>
                    <li><a href="{{ path('post_list') }}">HomePage</a></li>
                    <li><a href="{{ path("new_post") }}">Create new Post</a></li>
                </ul>
            {% endblock %}
        </div>
        <div class="content">
            {% block content %}{% endblock %}
        </div>
        
        {% endblock %}
    </body>
</html>
