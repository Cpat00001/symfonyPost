<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome to SymfonyPost CRUD App!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            {# add bootstrap #}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            {# custom css #}
            <link rel="stylesheet" href="/css/app.css">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="/js/app.js" defer></script>
        {% endblock %}
    </head>
    <body>
        {# {% block body %} #}
        {# <div class="sidebar"> #}
            {% block navbar %}
   
            <nav class="navbar navbar-expand-lg navbar-light bg-light mb-5">
                <div class="container">
                  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('post_list') }}">HomePage</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path("new_post") }}">Create new Post</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">Register</a>
                        </li>
                    </ul>
                  </div>
                </div>
            </nav>
            
            {% endblock %}
        {# </div> #}
        
        <div class="container" >
            {% block body %}
            {# show flesh message #}
            {% for message in app.flashes('notice') %}
                <div class="confirmation" id="msgBanner" style="background-color: rgb(29, 207, 67);
                color: rgb(236, 229, 229);font-weight: 900;padding: 10px;">
                    {{ message }}
                </div>
            {% endfor %}
            
            <div class="content">
                {% block content %}{% endblock %}
            </div>
            {% endblock %}
        </div>
        
        

        {# ##### footer ###### #}
        <div class="footer">
            {% block footer %}
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h5>CRUD</h5>
                    </div>
                    <div class="col-md-6">
                        <h5>SymfonyPost</h5>
                    </div>
                </div>
            </div>
            {% endblock %}
        </div>
        {# ########### #}
        {# {% endblock %} #}
    {# </div> #}
    </body>
</html>
